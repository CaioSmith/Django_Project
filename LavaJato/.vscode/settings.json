        "**/templates/**/*.html": "django-html",
        "**/templates/**/*.css": "css",
        "**/templates/**/*.js": "javascript",

    },
    "emmet.includeLanguages": {
        "django-html": "html",
        "css": "css",
        "javascript": "js"
    }
}